{
  "name": "lisan-ul-quran",
  "version": "1.0.0",
  "description": "A beautiful React Native app for learning Quranic Arabic with modern UI",
  "main": "index.js",
  "react-native": {
    "source": {
      "ios": "./ios",
      "android": "./android"
    }
  },
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace LisanUlQuran.xcworkspace -scheme LisanUlQuran -configuration Release archive",
    "web": "webpack serve --mode development",
    "build:web": "webpack --mode production"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.5",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@types/react-dom": "^19.0.0",
    "ajv": "^8.17.1",
    "nativewind": "^2.0.11",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-native": "0.72.6",
    "react-native-gesture-handler": "^2.13.4",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-reanimated": "^3.5.4",
    "react-native-safe-area-context": "^4.7.4",
    "react-native-screens": "^3.27.0",
    "react-native-svg": "^13.14.0",
    "react-native-toast-message": "^2.3.3",
    "react-native-vector-icons": "^10.0.2",
    "react-native-web": "^0.21.0",
    "react-query": "^3.39.3",
    "tailwindcss": "^3.3.6",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "babel-loader": "^10.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "ts-loader": "^9.5.2",
    "typescript": "4.8.4",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "jest": {
    "preset": "react-native"
  },
  "keywords": [
    "react-native",
    "quran",
    "arabic",
    "learning",
    "islamic",
    "education"
  ],
  "author": "Your Name",
  "license": "MIT"
}
